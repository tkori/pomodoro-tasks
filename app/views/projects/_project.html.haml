/ <haml_silent> completion_rate = project.total == 0 ? 0 : (project.done / project.total.to_f * 100).round </haml_silent>
%li.list-group-item{:id => "project-#{project.id}", :style => "position:relative;"}
  / <haml_loud> link_to content_tag(:i, &#39;&#39;, class: &#39;fa fa-check fa-lg&#39;, id: &quot;project-#{project.id}-checkbox&quot;), &#39;&#39;, remote: true, style: &quot;margin-left: 8px;&quot; </haml_loud>
  %span.project-title= project.title
  / <span style="position:absolute;top:11px;right:120px;"><haml_loud> project.done </haml_loud> / <haml_loud> project.total </haml_loud></span>
  -# .progress{:style => "margin-top:8px;"}
  -#   .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => completion_rate, :role => "progressbar", :style => "width: #{completion_rate}%;"}
  -#     = completion_rate
  -#     \%
  %div{:style => "position:absolute;top:11px;right:24px;"}
    / <haml_loud> link_to content_tag(:i, &#39;&#39;, class: &#39;fa fa-edit fa-lg project-edit&#39;, id: &quot;project-#{project.id}-edit&quot;), edit_project_path(project.id), remote: true, style: &quot;margin-left: 8px;&quot; </haml_loud>
    %span.delete
      = link_to content_tag(:i, '', class: 'fa fa-trash fa-lg'), project_path(project.id), method: :delete, remote: true, style: "margin-left: 5px;"
    / <haml_loud> link_to content_tag(:i, &#39;&#39;, class: &#39;fa fa-save fa-lg&#39;), project_path(project.id), method: :patch, remote: true, style: &quot;margin-left: 5px;visibility:hidden;&quot; </haml_loud></span>
